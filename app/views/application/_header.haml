.navbar
  .navbar-inner
    .container
      %span.brand DX Model
      %ul.nav
        %li{:class => "#{'active' if params[:controller] == 'uploads' and params[:action] == 'new'}"}
          = link_to 'Upload data', new_upload_path


        %li{:class => "dropdown #{'active' if params[:controller] == 'positions' and params[:action] == 'signaled'}"}
          = link_to 'Signals', signaled_positions_path

        %li{:class => "#{'active' if params[:controller] == 'positions' and params[:action] == 'active'}"}
          = link_to 'Positions', entered_positions_path

        %li{:class => "#{'active' if params[:controller] == 'positions' and params[:action] == 'exited'}"}
          = link_to 'History', exited_positions_path

        %li{:class => "#{'active' if params[:controller] == 'stock_dates' and params[:action] == 'index'}"}
          = link_to 'Raw data', stock_dates_path
