%h1 FX Rates

%table.table.table-hover.table-condensed
  %thead
    %th Date
    - if CURRENCIES.include?('USD')
      %th USDUSD 
    - if CURRENCIES.include?('SGD')
      %th USDSGD 
    - if CURRENCIES.include?('HKD')
      %th USDHKD
    - if CURRENCIES.include?('CNY')
      %th USDCNY
    - if CURRENCIES.include?('GBp')
      %th USDGBp
    - if CURRENCIES.include?('EUR')
      %th USDEUR
    - if CURRENCIES.include?('JPY')
      %th USDJPY
    - if CURRENCIES.include?('AUD')
      %th USDAUD
    - if CURRENCIES.include?('NZD')
      %th USDNZD
  %tbody
    - @fx_rates.each do |fx_rate|
      %tr
        %td= fx_rate.date
        - if CURRENCIES.include?('USD')
          %td= fx_rate.usdusd
        - if CURRENCIES.include?('SGD')
          %td= fx_rate.usdsgd
        - if CURRENCIES.include?('HKD')
          %td= fx_rate.usdhkd
        - if CURRENCIES.include?('CNY')
          %td= fx_rate.usdcny
        - if CURRENCIES.include?('GBp')
          %td= fx_rate.usdgbp
        - if CURRENCIES.include?('EUR')
          %td= fx_rate.usdeur
        - if CURRENCIES.include?('JPY')
          %td= fx_rate.usdjpy
        - if CURRENCIES.include?('AUD')
          %td= fx_rate.usdaud
        - if CURRENCIES.include?('NZD')
          %td= fx_rate.usdnzd
