%h1 New FX rate data

= simple_form_for(@fx_rate, :defaults => {:required => false, :input_html => {:class => 'xlarge'}}) do |f|
  = f.input :date, :as => :string
  = f.input :usdsgd, :label => 'USDSGD'
  = f.input :usdhkd, :label => 'USDHKD'
  = f.input :usdcny, :label => 'USDCNY'
  = f.input :usdgbp, :label => 'USDGBP'
  = f.input :usdeur, :label => 'USDEUR'

  .control-group
    .controls
      = f.button :submit, 'Submit'


:javascript
  $(function() {
    $( "#fx_rate_date" ).datepicker({ dateFormat: "yy-mm-dd" });
  });
