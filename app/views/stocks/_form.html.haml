= form_for @stock do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :industry_id
    = f.number_field :industry_id
  .field
    = f.label :risk_funda_screen1_score
    = f.text_field :risk_funda_screen1_score
  .actions
    = f.submit 'Save'
