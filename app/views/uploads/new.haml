= form_tag(uploads_path, {:multipart => true, :class => 'form-horizontal'}) do 
  .control-group
    %label.control-label{:for => "date"} Date
    .controls
      %input#date{:name => 'date', :type => "text"}

  .control-group
    %label.control-label{:for => "long"} Long file
    .controls
      %input#long{:name => 'long', :type => "file"}

  .control-group
    %label.control-label{:for => "short"} Short file
    .controls
      %input#short{:name => 'short', :type => "file"}

  .control-group
    .controls
      %button.btn{:type => "submit"} Upload

%hr

