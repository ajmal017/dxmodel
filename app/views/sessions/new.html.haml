%h1 Log in

= form_tag sessions_path, :class => 'form-horizontal' do
  .control-group
    = label_tag :email, 'Email', :class => 'control-label'
    .controls
      = text_field_tag :email, params[:email]

  .control-group
    = label_tag :password, 'Password', :class => 'control-label'
    .controls
      = password_field_tag :password

  .control-group
    .controls
      = submit_tag "Log in"
